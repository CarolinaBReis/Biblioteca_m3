@model Client_Biblioteca_TrabalhoFinal.Models.Nucleos

<form method="post" asp-action="CreateNucleo" enctype="multipart/form-data">
    <div class="row px-2 mx-2 backgroundWhite border">

        <input type="hidden" asp-for="IDNucleo" value="0"/>   <!-- Necessário passar valor para validar modelo -->   
                                                              <!-- API vai gerar ID automático --> 
        <div class="col-12 p-3">
            <h2 class="text-primary">Adicionar Núcleo</h2>
        </div>
        <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nucleo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nucleo" />
                    <span asp-validation-for="Nucleo" class="text-danger"></span>
                    <p></p>
                </div>          
     
                
            <div class="form-group row">
                <div class="col-4 offset-4">                                            
                        <button type="submit" class="btn btn-success form-control">
                            Submeter
                    </button>   
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-primary form-control">Voltar</a>
                </div>
            </div>
        </div>        
    </div>

</form>
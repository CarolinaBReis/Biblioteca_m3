@{
    ViewData["Title"] = "Nucleos";
}

<div class="text-center">
    <h3 class="display-5">Gestão de Núcleos</h3>
    <p></p>
    
    <div class="p-4" style="border-radius:20px;">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Núcleos</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="CreateNucleo" class="btn btn-primary text-white"><i class="fas fa-plus"></i> &nbsp; Criar Núcleo</a>
        </div>
    </div>
    <br />
    <br />
    <div class="p-3 rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr class="table-light">
                    <th>ID Núcleo</th>
                    <th>Localização</th>                    
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
    
</div>

@section Scripts{
    <script src="~/js/nucleos.js"></script>
}
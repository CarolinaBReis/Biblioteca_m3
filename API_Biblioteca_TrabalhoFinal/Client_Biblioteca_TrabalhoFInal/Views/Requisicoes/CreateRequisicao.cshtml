@model Client_Biblioteca_TrabalhoFinal.Models.Requisicoes

<form method="post" asp-action="CreateRequisicao" enctype="multipart/form-data">
    <div class="row px-2 mx-2 backgroundWhite border">

        <input type="hidden" asp-for="DataRequisicao" value="@DateTime.Now"/>
        <input type="hidden" asp-for="DataDevolucao" value="@DateTime.Now"/>  <!-- valor valida modelo, API define como null-->
        
        <div class="col-12 p-3">
            <h2 class="text-primary">Efetuar Requisição</h2>
            <h6 class="text-muted">Por favor verifique se todos os dados da requisição estão corretos antes de submeter</h6>
        </div>
        <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ISBN"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ISBN" /> 
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="IDNucleo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IDNucleo" />
                    <span asp-validation-for="IDNucleo" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="NIF"></label>
                </div>
                <div class="col-8">
                    <input asp-for="NIF" /> 
                    <span asp-validation-for="NIF" class="text-danger"></span>
                </div>                           
                

                
            <div class="form-group row">
                <div class="col-4 offset-4">                                            
                        <button type="submit" class="btn btn-success form-control">
                            Submeter
                    </button>   
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-primary form-control">Voltar</a>
                </div>
            </div>
        </div>        
    </div>

</form>
@{
    ViewData["Title"] = "O Nosso Catálogo";
}

<div class="text-center">
    <h3 class="display-5">O Nosso Catálogo</h3>
    <p></p>
    <h5 class="text-muted lead">Veja aqui a lista das obras que pode encontrar no nosso espólio</h5>

    <div class="p-4" style="border-radius:20px;">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista de Obras</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="CreateObra" class="btn btn-primary text-white"><i class="fas fa-plus"></i> &nbsp; Adicionar Obra</a>
        </div>
    </div>
    <br />
    <br />
    <div class="p-3 rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr class="table-light">
                    <th>Titulo</th>
                    <th>Autor</th>
                    <th>Editora</th>
                    <th>Assunto</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
    
</div>

@section Scripts{
    <script src="~/js/obras.js"></script>
}
